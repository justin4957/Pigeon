# Pigeon Development Environment Configuration
# Copy to .env.local and customize for your setup

# Control Node Configuration
CONTROL_NODE_HOST=localhost
CONTROL_NODE_PORT=4040

# Worker Configuration
WORKER_BASE_PORT=8080
WORKER_COUNT=2

# Container Configuration
CONTAINER_REGISTRY=localhost
IMAGE_TAG=latest

# Development Settings
MIX_ENV=dev
ELIXIR_VERSION=1.17.3
OTP_VERSION=27.1

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# Resource Limits (for extended workers)
CPU_WORKER_CPUS=2.0
MEMORY_WORKER_LIMIT=1g

# Network Configuration
NETWORK_NAME=pigeon_network
USE_HOST_NETWORK=false

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_LIVE_DASHBOARD=true
ENABLE_CODE_RELOADING=true

# Testing Configuration
TEST_TIMEOUT=1200
ENABLE_TEST_COVERAGE=false
PARALLEL_TEST_WORKERS=4

# CI/CD Settings
SKIP_STATIC_ANALYSIS=false
TREAT_WARNINGS_AS_ERRORS=true
GENERATE_DOCS=true